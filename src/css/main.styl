@import 'jeet'

$wit = #fff
$zwart = #000
$geel = #f7a600
$oker = #b27800
$grijs = #f0f0f0
$grijze_tekst = #8d8d8d
$max-width = 1024px

$font_family = 'Palanquin', sans-serif

normalize-css()
base()

body
  font-family $font_family
  font-weight 300
  color $grijze_tekst

  h1, h2, h3, h4, h5, h6
    font-weight 100
    margin-bottom 0
    text-transform lowercase

  p
    margin-top 0

.outer-wrapper
  &.scroll
    header
      padding .5rem 0
      transition all .5s

    section.payoff
      padding-top 56px
      transition all .5s

  header
    padding 2rem 0
    color $wit
    background-color $zwart
    font-weight 700
    position fixed
    width 100%
    transition all .5s

    .logo a
      background-image url('./images/logo.png')
      background-position center center
      background-repeat no-repeat
      background-size contain
      height 2.5rem
      display block

      .inner-logo
        display none

    a
      color $wit
      text-decoration none

      &:hover
        color $oker

    .inner-header
      center($max-width)

      .logo
        column(1/3)

      nav
        column(2/3)
        text-align right

        ul.menu, ul.social
          display inline-block
          list-style none
          margin 0
          padding 0

        ul.menu li
          display inline-block
          margin 0 3rem

        ul.social li
          display inline-block
          margin 0 .5rem

  section.payoff
    padding-top 104px
    background-color $oker
    background-image url('./images/verloop.png')
    background-repeat repeat-y
    background-position center
    background-size contain
    color $wit
    text-align center
    font-size 3rem
    transition all .5s

    .inner-payoff
      center($max-width)

      &.portfolio-picture-items
        padding 1rem 0
        margin-bottom 0

      .quote img
        margin 2rem 0
        span(1/3, offset=1/3)
        max-width 100%

      quote
        display none

  main section.payoff
    font-size 0

  section.main-content
    background-color $wit
    padding 1rem 0

    img
      max-width 100%
      height auto

    .entry-content
      cf()

    &.is_overview
      .entry-title
        column(2/3, offset=1/3)

      .entry-image
        column(1/3)

      .entry-text
        column(2/3)

    .inner-content
      center($max-width)

      a
        color $oker

      h1, h2, h3, h4, h5, h6
        a
          color $grijze_tekst
          text-decoration none

  section.recent-werk
    text-align center
    background-color $grijs

    .inner-werk
      center($max-width)
      padding 2rem 0

      h1
        margin 0

      ul
        list-style none
        margin 0
        padding 0

        li
          column(1/3)

  footer
    padding 1rem 0
    font-size .7rem
    text-align center
