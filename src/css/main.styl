@import 'jeet'

$wit = #fff
$zwart = #000
$geel = #f7a600
$oker = #b27800
$grijs = #f0f0f0
$grijze_tekst = #8d8d8d
$max-width = 1024px

$font_family = 'aaux-next', 'Palanquin', sans-serif

normalize-css()
base()

body
  font-family $font_family
  color $grijze_tekst

  h1, h2, h3, h4, h5, h6
    font-weight lighter
    margin-bottom 0.5rem

  p
    margin-top 0

  .alignright
    float right
    margin-left 1rem

.outer-wrapper
  &.scroll
    header
      padding .5rem 0
      transition all .5s

    section.payoff
      padding-top 56px
      transition all .5s

  header
    padding 1rem 0
    +mobile()
      padding .5rem 0
    color $wit
    background-color $zwart
    position fixed
    width 100%
    transition all .5s
    font-weight bold

    .logo a
      background-image url('./images/logo-v2.png')
      background-position left center
      background-repeat no-repeat
      background-size contain
      height 4.5rem
      display block

      .inner-logo
        display none

    a
      color $wit
      text-decoration none

      &:hover
        color $oker

    .inner-header
      center($max-width)

      .logo
        span(1/3)
        +tablet()
          margin-left .5rem
        +mobile()
          span(1/1)
          margin 0

          a
            background-position center center

      nav
        span(2/3)
        text-align right
        +mobile()
          span(1)
          text-align center

        ul.menu, ul.social
          display inline-block
          +tablet()
            display block
          list-style none
          margin 0
          padding 0

        +tablet()
          ul.social
            position absolute
            bottom .5rem
            right .5rem

        +mobile()
          ul.menu, ul.social
            position static
            text-align center
            margin-left auto
            margin-right auto

        ul.menu li
          display inline-block
          margin 0 1rem
          +mobile()
            text-align center
            line-height 1.5rem
            margin 0 .5rem
          +desktop()
            margin 0 3rem
            line-height 4.5rem

        ul.social li
          display inline-block
          margin 0 .5rem
          +mobile()
            text-align center

  section.payoff
    padding-top 104px
    background-color $oker
    background-image url('./images/verloop.png')
    background-repeat repeat-y
    background-position center
    background-size contain
    color $wit
    text-align center
    font-size 3rem
    transition all .5s

    .inner-payoff
      center($max-width)

      &.portfolio-picture-items
        padding 1rem 0
        margin-bottom 0

      .quote
        +mobile()
          padding 1rem

      .quote img
        margin 2rem 0
        max-width 100%
        span(1/3, offset=1/3)
        +mobile()
          span(1/1)
          margin-top 4rem

      quote
        display none

  main section.payoff
    font-size 0

  section.main-content
    background-color $wit
    padding 1rem 0

    +tablet()
      padding 1rem

    img
      max-width 100%
      height auto

    .entry-content
      cf()

    &.is_overview
      .entry-title
        column(2/3, offset=1/3)

      .entry-image
        column(1/3)

      .entry-text
        column(2/3)

      +mobile()
        .entry-title
          column(1)

        .entry-image
          column(1)

        .entry-text
          column(1)

    .inner-content
      center($max-width)

      a
        color $grijze_tekst

        &:hover
          color $oker

      h1, h2, h3, h4, h5, h6
        a
          color $grijze_tekst
          text-decoration none

  section.recent-werk
    text-align center
    background-color $grijs

    .inner-werk
      center($max-width)
      padding 2rem 0

      h1
        margin 0

      ul
        list-style none
        margin 0
        padding 0

        li
          column(1/3)
          +mobile()
            span(1/1)

  footer
    padding 1rem 0
    font-size .7rem
    text-align center
